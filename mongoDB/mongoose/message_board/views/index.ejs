<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Board</title>
    <link rel='stylesheet' href='/style.css'>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class='container'>
        <div class="jumbotron">
            <h1 class="display-4">The Dojo Message Board</h1>
            <hr class="my-4">
        </div>
        <div class='row'>
            <h3>Post a message</h3>
            <form action='/messages' method='POST'>
                <div class='form-group'>
                    <p><label for='user'>Name: </label></p>
                    <p><input type='text'class='form-control' name='user'></p>
                </div>
                <div class='form-group'>
                    <p><label for='message'>Message: </label></p>
                    <p><textarea name='message' class='form-control' rows='5'></textarea></p>
                </div>
                <button type='submit' class='btn btn-primary'>Post message</button>
            </form>
        </div>
        <% messages.forEach (message => { %>
        <hr class="my-4">
        <div class='row'>
            <div class='messages'>
                <h4>Name: <%= message.user %></h4>
                <h4>Message: <%= message.message %></h4>
            </div>
            <div class='comments'>
                <% message.comments.forEach (c => { %>
                    <p>Name: <%= c.user %></p>
                    <p>Comment: <%= c.comment %></p>
                <% }) %>
            </div>
            <div class='commentForm'>
                <p>Leave a comment</p>
                <form action='/comments/<%= message._id %>' method='POST'>
                    <div class='form-group'>
                        <p><label for='user'>Name: </label></p>
                        <p><input type='text' class='form-control' name='user'></p>
                    </div>
                    <div class='form-group'>
                        <p><label for='comment'>Comment: </label></p>
                        <p><textarea name='comment' class='form-control' rows='3'></textarea></p>
                    </div>
                    <button type='submit' class='btn btn-primary'>Post comment</button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>